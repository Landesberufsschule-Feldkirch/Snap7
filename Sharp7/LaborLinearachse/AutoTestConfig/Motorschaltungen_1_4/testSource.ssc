///////////////////////////////////////////////////////////////
//
// Motorschaltungen 1 - 4 (Linearachse)
//
///////////////////////////////////////////////////////////////

// Eingänge:
var DI_0_0 = "2#0001"       // B1   Linearachse Endlage links → Öffner
var DI_0_1 = "2#0010"       // B2   Linearachse Endlage rechts → Öffner
var DI_0_2 = "2#0100"       // S2   Taster(⓪) → Öffner
var DI_0_3 = "2#1000"       // S1   Taster(①) → Schliesser

var DI_0_4 = "2#0001_0000"  // S4   Taster(Ⅱ) → Schliesser
var DI_0_5 = "2#0010_0000"  // S3   Taster(Ⅰ) → Schliesser
var DI_0_6 = "2#0100_0000"  // S6   Taster(↓) → Schliesser
var DI_0_7 = "2#1000_0000"  // S5   Taster(↑) → Schliesser

var DI_1_0 = "2#0001_0000_0000" // S8   Taster(－) → Schliesser
var DI_1_1 = "2#0010_0000_0000" // S7   Taster(+) → Schliesser
var DI_1_2 = "2#0100_0000_0000" // S9   Taster(STOP) → Öffner
var DI_1_3 = "2#1000_0000_0000" // S10  Not-Halt → Öffner

var DI_1_4 = "2#0001_0000_0000_0000" // S11  Not-Halt → Schliesser

// Ausgänge:
var DQ_0_0 = "2#0001"       // Q1   Linearachse Rechtslauf
var DQ_0_1 = "2#0010"       // Q2   Linearachse Linkslauf
var DQ_0_2 = "2#0100"       // P1   Meldeleuchte im Taster S1/S2(weiß)
var DQ_0_3 = "2#1000"       // P2   Meldeleuchte weiß

var DQ_0_4 = "2#0001_0000"  // P3   Meldeleuchte rot
var DQ_0_5 = "2#0010_0000"  // P4   Meldeleuchte grün

main()
{
    var F1 = Plc2Dec(DI_0_2) // Thermorelais
    var S1 = Plc2Dec(DI_0_0) // Stop
    var S2 = Plc2Dec(DI_0_1) // Start
    var S8 = Plc2Dec(DI_0_7) // Quittieren
    var S92 = Plc2Dec(DI_1_1) // Not-Halt

    var AllesAus = 0
    var P1 = Plc2Dec(DQ_0_4) // weiß
    var P2 = Plc2Dec(DQ_0_5) // grün
    var P3 = Plc2Dec(DQ_0_6) // rot
    var MaskeP1_P2_P3 = P1 + P2 + P3

    SetDataGridBitAnzahl 0, 0

    Sleep("T#100ms")
    UpdateAnzeige "Init", ""
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S8 + S92)
    ResetStopwatch
    Sleep("T#100ms")
    BitmusterTesten P1, MaskeP1_P2_P3, "T#5s", "Quittieren -> Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S92)
    ResetStopwatch
    BitmusterTesten P1, MaskeP1_P2_P3, "T#5s", "Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S2 + S92)
    ResetStopwatch
    BitmusterTesten P2, MaskeP1_P2_P3, "T#5s", "Motor Ein?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S92)
    ResetStopwatch
    BitmusterTesten P2, MaskeP1_P2_P3, "T#5s", "Motor noch Ein?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S92)
    ResetStopwatch
    BitmusterTesten P1, MaskeP1_P2_P3, "T#5s", "Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S92)
    ResetStopwatch
    BitmusterTesten P1, MaskeP1_P2_P3, "T#5s", "Immer noch Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S92)
    ResetStopwatch
    BitmusterTesten P3, MaskeP1_P2_P3, "T#5s", "Störung Thermorelais und Motor Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S2 + S92)
    ResetStopwatch
    BitmusterTesten P3, MaskeP1_P2_P3, "T#5s", "Störung Thermorelais und Motor bleibt Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, MaskeP1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz)"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S2 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, MaskeP1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz) und Motor bleibt aus"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S8 + S92)
    ResetStopwatch
    BitmusterTesten P1, MaskeP1_P2_P3, "T#5s", "Quittieren -> Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1)
    ResetStopwatch
    BitmusterTesten P3, MaskeP1_P2_P3, "T#5s", "Störung Not-Halt und Motor Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S2)
    ResetStopwatch
    BitmusterTesten P3, MaskeP1_P2_P3, "T#5s", "Störung Not-Halt und Motor bleibt Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, MaskeP1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz)"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S2 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, MaskeP1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz) und Motor bleibt aus"
    IncrementDataGridId

    SetDigitaleEingaenge(F1 + S1 + S8 + S92)
    ResetStopwatch
    BitmusterTesten P1, MaskeP1_P2_P3, "T#5s", "Quittieren -> Betriebsbereit?"
    IncrementDataGridId

    UpdateAnzeige "Erfolgreich", ""
}

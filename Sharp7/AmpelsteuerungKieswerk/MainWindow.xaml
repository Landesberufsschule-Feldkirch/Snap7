<Window x:Class="AmpelsteuerungKieswerk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmpelsteuerungKieswerk"
        mc:Ignorable="d"
        Title="Ampelsteuerung Kieswerk" Height="1000" Width="1800" Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbl_VersionsInfo" Content="V0.0 " Grid.Column="26" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Right"/>
        <Label x:Name="lbl_PlcPing"  Content="" Grid.Column="13" Grid.Row="5"  Grid.ColumnSpan="6" />

        <Rectangle Fill="LightGray" Grid.Column="23" Grid.ColumnSpan="5" Grid.Row="1"  Grid.RowSpan="4" Stroke="Black"  />
        <Rectangle Fill="LightGray" Grid.Column="23" Grid.ColumnSpan="5" Grid.Row="7"  Grid.RowSpan="5" Stroke="Black"  />


        <Button x:Name="btn_Connect" Content="Connect" Grid.Column="24" Grid.Row="3" Click="ButtonConnect_Click"  />
        <Button x:Name="btn_Disconnect" Content="Disconnect" Grid.Column="26" Grid.Row="3" Click="ButtonDisconnect_Click"  IsEnabled="False"  />

        <Button x:Name="AlleLinksParken" Grid.ColumnSpan="3" Content="Links parken!" Grid.Column="24" Grid.Row="8" Click="AlleLinksParken_Click"/>
        <Button x:Name="AlleRechtsParken" Grid.ColumnSpan="3" Content="Rechts parken!" Grid.Column="24" Grid.Row="10" Click="AlleRechtsParken_Click"/>

        <Rectangle x:Name="Wand_draussen_links" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="8" Fill="DarkGray" Margin="0,0,0,20" />
        <Rectangle x:Name="Wand_draussen_rechts" Grid.Column="9" Grid.ColumnSpan="3" Grid.Row="8" Fill="DarkGray" Margin="0,0,0,20" />
        <Rectangle x:Name="Wand_einfahrt_links" Grid.Column="4"  Grid.Row="8" Grid.RowSpan="4" Fill="DarkGray" Margin="50,0,0,0" />
        <Rectangle x:Name="Wand_einfahrt_rechts" Grid.Column="9"  Grid.Row="8" Grid.RowSpan="4" Fill="DarkGray" Margin="0,0,50,0" />
        <Rectangle x:Name="Wand_drinnen_links" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="11" Fill="DarkGray" Margin="0,20,0,0" />
        <Rectangle x:Name="Wand_drinnen_rechts" Grid.Column="9" Grid.ColumnSpan="3" Grid.Row="11" Fill="DarkGray" Margin="0,20,50,0" />
        <Rectangle x:Name="Wand_garage_links" Grid.Column="3"  Grid.Row="12" Grid.RowSpan="7" Fill="DarkGray" Margin="0,0,50,0" />
        <Rectangle x:Name="Wand_garage_rechts" Grid.Column="11"  Grid.Row="12" Grid.RowSpan="7" Fill="DarkGray" Margin="0,0,50,0" />

        <Ellipse x:Name="circ_Lampe_draussen_links" Grid.Column="5" Grid.Row="8"  Fill="Yellow" Stroke="Black" Margin="5,15,45,0"/>
        <Ellipse x:Name="circ_Lampe_drinnen_links" Grid.Column="5" Grid.Row="10"  Fill="Yellow" Height="20" Stroke="Black" Margin="5,0,45,15"/>
        <Label x:Name="lbl_Lampe_draussen_links" Grid.Column="5" Grid.Row="8" Content="P1" Margin="25,10,20,0"/>
        <Label x:Name="lbl_Lampe_drinnen_links" Grid.Column="5" Grid.Row="10" Content="P2" Margin="30,0,15,10"/>

        <Ellipse x:Name="circ_Lichtschranke_draussen_rechts" Grid.Column="8" Grid.Row="8"  Fill="LawnGreen" Height="20" Stroke="Black" Margin="40,15,10,0"/>
        <Ellipse x:Name="circ_Lichtschranke_drinnen_rechts" Grid.Column="8" Grid.Row="10"  Fill="LawnGreen" Height="20" Stroke="Black" Margin="40,0,10,15"/>

        <Label x:Name="lbl_Lichtschranke_draussen_rechts" Grid.Column="8" Grid.Row="8" Content="B1" Margin="18,10,26,0"/>
        <Label x:Name="lbl_Lichtschranke_drinnen_rechts" Grid.Column="8" Grid.Row="10" Content="B2" Margin="18,0,26,10"/>

        <Canvas Grid.Column="1" Grid.ColumnSpan="11" Grid.Row="1" Grid.RowSpan="11">

            <Button x:Name="btn_lkw_1" Click="btn_Click">
                <Image x:Name="img_lkw_1" Height="60" Source="Bilder/LKW_braun.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_2" Click="btn_Click">
                <Image x:Name="img_lkw_2" Height="60" Source="Bilder/LKW_gelb.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_3" Click="btn_Click">
                <Image x:Name="img_lkw_3" Height="60" Source="Bilder/LKW_gruen.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_4" Click="btn_Click">
                <Image x:Name="img_lkw_4" Height="60" Source="Bilder/LKW_pink.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_5" Click="btn_Click">
                <Image x:Name="img_lkw_5" Height="60" Source="Bilder/LKW_rot.PNG"/>
            </Button>






        </Canvas>


    </Grid>
</Window>

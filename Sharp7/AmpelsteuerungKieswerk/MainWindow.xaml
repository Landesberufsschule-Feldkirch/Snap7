<Window x:Class="AmpelsteuerungKieswerk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmpelsteuerungKieswerk"
        mc:Ignorable="d"
        Title="Ampelsteuerung Kieswerk" Height="1000" Width="1800" Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbl_VersionsInfo" Content="V0.0 " Grid.Column="26" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Right"/>
        <Label x:Name="lbl_PlcPing"  Content="" Grid.Column="8" Grid.Row="19"  Grid.ColumnSpan="6" Background="LightSeaGreen" />
        <Rectangle Fill="LightGray" Grid.Column="23" Grid.ColumnSpan="5" Grid.Row="7"  Grid.RowSpan="5" Stroke="Black"  />

        <Button x:Name="AlleLinksParken" Grid.ColumnSpan="3" Content="Links parken!" Grid.Column="24" Grid.Row="8" Click="AlleLinksParken_Click"/>
        <Button x:Name="AlleRechtsParken" Grid.ColumnSpan="3" Content="Rechts parken!" Grid.Column="24" Grid.Row="10" Click="AlleRechtsParken_Click"/>

        <Rectangle x:Name="Wand_oben_1" Grid.Column="6"  Grid.Row="2" Grid.RowSpan="4" Fill="DarkGray" Margin="50,0,0,0" />
        <Rectangle x:Name="Wand_oben_2" Grid.Column="6" Grid.ColumnSpan="10" Grid.Row="5" Fill="DarkGray" Margin="60,20,0,0" />
        <Rectangle x:Name="Wand_oben_3" Grid.Column="16"  Grid.Row="2" Grid.RowSpan="4" Fill="DarkGray" Margin="0,0,50,0" />

        <Rectangle x:Name="Wand_unten_1" Grid.Column="6"  Grid.Row="10" Grid.RowSpan="4" Fill="DarkGray" Margin="50,0,0,0" />
        <Rectangle x:Name="Wand_unten_2" Grid.Column="6" Grid.ColumnSpan="10" Grid.Row="10" Fill="DarkGray" Margin="60,0,0,20" />
        <Rectangle x:Name="Wand_unten_3" Grid.Column="16"  Grid.Row="10" Grid.RowSpan="4" Fill="DarkGray" Margin="0,0,50,0" />

        <Rectangle x:Name="rct_Ampel_links" Grid.Column="6" Grid.Row="3" Grid.RowSpan="3" Fill="DarkSlateGray" Margin="-1,-1,34,-1"/>
        <Ellipse x:Name="circ_Ampel_links_rot" Grid.Column="6" Grid.Row="3" Fill="Red" Margin="0,0,35,0"/>
        <Ellipse x:Name="circ_Ampel_links_gelb" Grid.Column="6" Grid.Row="4" Fill="Yellow" Margin="0,0,35,0"/>
        <Ellipse x:Name="circ_Ampel_links_gruen" Grid.Column="6" Grid.Row="5" Fill="Green" Margin="0,0,35,0"/>

        <Rectangle x:Name="rct_Ampel_rechts" Grid.Column="16" Grid.Row="3" Grid.RowSpan="3" Fill="DarkSlateGray" Margin="34,-1,-1,-1"/>
        <Ellipse x:Name="circ_Ampel_rechts_rot" Grid.Column="16" Grid.Row="3" Fill="Red" Margin="35,0,0,0"/>
        <Ellipse x:Name="circ_Ampel_rechts_gelb" Grid.Column="16" Grid.Row="4" Fill="Yellow" Margin="35,0,0,0"/>
        <Ellipse x:Name="circ_Ampel_rechts_gruen" Grid.Column="16" Grid.Row="5" Fill="Green" Margin="35,0,0,0"/>

        <Ellipse x:Name="circ_Lampe_draussen_links" Grid.Column="5" Grid.Row="8"  Fill="Yellow" Stroke="Black" Margin="5,15,45,0"/>
        <Ellipse x:Name="circ_Lampe_drinnen_links" Grid.Column="5" Grid.Row="10"  Fill="Yellow" Height="20" Stroke="Black" Margin="5,0,45,15"/>
        <Label x:Name="lbl_Lampe_draussen_links" Grid.Column="5" Grid.Row="8" Content="P1" Margin="25,10,20,0"/>
        <Label x:Name="lbl_Lampe_drinnen_links" Grid.Column="5" Grid.Row="10" Content="P2" Margin="30,0,15,10"/>

        <Ellipse x:Name="circ_Lichtschranke_draussen_rechts" Grid.Column="8" Grid.Row="8"  Fill="LawnGreen" Height="20" Stroke="Black" Margin="40,15,10,0"/>
        <Ellipse x:Name="circ_Lichtschranke_drinnen_rechts" Grid.Column="8" Grid.Row="10"  Fill="LawnGreen" Height="20" Stroke="Black" Margin="40,0,10,15"/>

        <Label x:Name="lbl_Lichtschranke_draussen_rechts" Grid.Column="8" Grid.Row="8" Content="B1" Margin="18,10,26,0"/>
        <Label x:Name="lbl_Lichtschranke_drinnen_rechts" Grid.Column="8" Grid.Row="10" Content="B2" Margin="18,0,26,10"/>


        <Canvas Grid.Column="1" Grid.ColumnSpan="21" Grid.Row="1" Grid.RowSpan="16">

            <Button x:Name="btn_lkw_1" Click="btn_Click">
                <Image x:Name="img_lkw_1" Height="60" Source="Bilder/LKW_braun.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_2" Click="btn_Click">
                <Image x:Name="img_lkw_2" Height="60" Source="Bilder/LKW_gelb.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_3" Click="btn_Click">
                <Image x:Name="img_lkw_3" Height="60" Source="Bilder/LKW_gruen.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_4" Click="btn_Click">
                <Image x:Name="img_lkw_4" Height="60" Source="Bilder/LKW_pink.PNG"/>
            </Button>

            <Button x:Name="btn_lkw_5" Click="btn_Click">
                <Image x:Name="img_lkw_5" Height="60" Source="Bilder/LKW_rot.PNG"/>
            </Button>






        </Canvas>

    </Grid>
</Window>

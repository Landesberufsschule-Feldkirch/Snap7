<UserControl x:Class="PaternosterLager.Template.KetteLagerbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaternosterLager.Template"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="90">
    <Grid>
       
        <Canvas Width="90" Height="90" Background="LightCoral">
            <Rectangle Canvas.Left="0" Canvas.Top="40" Width="90" Height="30" Fill="LightGreen" Stroke="Black" StrokeThickness="2" />
            <Rectangle  Canvas.Left="40" Canvas.Top="10" Width="10" Height="80"   Fill="LightGray"  Stroke="Black" StrokeThickness="2" />
            <Ellipse    Canvas.Left="35" Canvas.Top="0" Width="20" Height="20"  Fill="DarkViolet" />
            <Ellipse    Canvas.Left="35" Canvas.Top="35" Width="10" Height="10"  Fill="Blue" Margin="5,0"/>
        </Canvas>
    </Grid>
</UserControl>

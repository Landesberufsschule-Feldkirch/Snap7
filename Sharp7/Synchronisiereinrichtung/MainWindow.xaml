<Window x:Class="Synchronisiereinrichtung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:Synchronisiereinrichtung"
        mc:Ignorable="d"
        Title="Synchronisiereinrichtung" Height="950" Width="1600" Closing="Window_Closing">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label x:Name="lbl_VersionsInfo" Content="V1.0 " Grid.Column="20" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Right"/>
        <Label x:Name="lbl_PlcPing"  Content="S7-1200" Grid.Column="2" Grid.Row="23"  Grid.ColumnSpan="5"  Background="LightSeaGreen"/>


        <Rectangle x:Name="ZuleitungLinks" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="5" Fill="Blue"/>
        <Rectangle x:Name="AbleitungRechts" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="5" Fill="LightBlue" Margin="0,5,22,5"/>
        <Image x:Name="VentilZuleitungAus" Source="Bilder/VentilElektrischAus.jpg" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="3" Grid.RowSpan="4" Margin="45,0,22,25"  />
        <Image x:Name="VentilZuleitungEin" Source="Bilder/VentilElektrischEin.jpg" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="2" Grid.RowSpan="4" Margin="45,0,22,25" Visibility="Hidden" />
        <Label Content="Y1" Grid.Column="4" Grid.Row="3" Margin="0,10,0,0"/>
        <Rectangle x:Name="AbleitunSenkrecht" Grid.Column="6"  Grid.Row="5" Fill="LightBlue" Grid.RowSpan="4" Margin="22,5,22,0"/>


        <Label Content="G1" Grid.Column="15" Grid.Row="7" Margin="38,0,0,34" Grid.RowSpan="2" />
        <Rectangle x:Name="ErregungBatteriePlus" Grid.Column="16" Grid.Row="7" Fill="Red" Margin="0,0,0,25"/>
        <Rectangle x:Name="ErregungBatterieMinus" Grid.Column="16" Grid.Row="7" Fill="Black" Margin="17,15,17,16"/>
        <Rectangle x:Name="ErregungBatterieMinusSenkrecht" Grid.Column="16" Grid.Row="7" Fill="Black" Margin="32,15,32,0"/>

        <Rectangle x:Name="ErregungZuleitungWaagrecht" Grid.Column="11" Grid.ColumnSpan="6" Grid.Row="5" Grid.RowSpan="2" Fill="Red" Margin="-3,32,32,32" />

        <Rectangle x:Name="ErregungZuleitungSenkrechtLinks" Grid.Column="10"  Grid.ColumnSpan="2" Grid.Row="6" Grid.RowSpan="2" Fill="Red" Margin="67,0,67,0" />
        <Rectangle x:Name="ErregungZuleitungSenkrechtRechts" Grid.Column="16" Grid.Row="6" Fill="Red" Margin="32,0,32,0"/>

        <Rectangle x:Name="Turbine" Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="9" Grid.RowSpan="4" Fill="#FF4545C3"/>
        <Rectangle x:Name="Welle" Grid.Column="8" Grid.Row="10" Grid.RowSpan="2" Stroke="Black" Margin="0,25"/>
        <Rectangle x:Name="Generator" Grid.Column="9" Grid.ColumnSpan="4" Grid.Row="8" Grid.RowSpan="6" Fill="Red"/>
        <Label Content="Turbine" Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="10"   Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20pt" />
        <Label Content="Generator" Grid.Column="9" Grid.ColumnSpan="4" Grid.Row="10"  Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20pt" />

        <Rectangle x:Name="StromGeneratorSenkrecht" Grid.Column="10" Grid.ColumnSpan="2" Grid.Row="14" Fill="Black" Grid.RowSpan="4" Margin="68,0,68,-2" />
        <Rectangle x:Name="StromGeneratorWaagrecht" Grid.Column="10" Grid.ColumnSpan="3" Grid.Row="17" Fill="Black" Margin="68,32,0,33" Grid.RowSpan="2" />
        <Rectangle x:Name="StromNetzWaagrecht" Grid.Column="14" Grid.ColumnSpan="3" Grid.Row="17" Fill="Black" Margin="67,32,0,33" Grid.RowSpan="2" />
        <Image x:Name="SchalterAus" Source="Bilder/Schalter.jpg" Grid.Column="13" Grid.Row="16" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="0,13,0,0"/>
        <Image x:Name="SchalterEin" Source="Bilder/SchalterBetaetigt.jpg" Grid.Column="13" Grid.Row="15" Grid.ColumnSpan="2" Grid.RowSpan="5" Margin="0,6,0,25" Visibility="Hidden"  />
        <Label Content="Q1" Grid.Column="13" Grid.Row="18" Margin="56,0,52,34" Grid.RowSpan="2" Grid.ColumnSpan="2" />

        <TextBlock x:Name="VentilOeffnung" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="3" FontSize="16pt">y = 0%</TextBlock>
        <TextBlock x:Name="Erregerstrom" Grid.Column="13" Grid.ColumnSpan="3" Grid.Row="5" FontSize="16pt">I<Run FontSize="12pt" BaselineAlignment="TextBottom">E</Run> = 0A</TextBlock>
        <TextBlock x:Name="Drehzahl"  Grid.Column="5" Grid.ColumnSpan="3" Grid.Row="14" FontSize="16pt">n = 0 min<Run FontSize="12pt" BaselineAlignment="TextTop">-1</Run></TextBlock>

        <Label Content="Generator" Grid.Column="11" Grid.ColumnSpan="4" Grid.Row="18" Grid.RowSpan="2" VerticalAlignment="Center" FontSize="20pt"/>
        <TextBlock x:Name="FrequenzGenerator" Grid.Column="11" Grid.ColumnSpan="3" Grid.Row="20" FontSize="16pt">f = 0Hz</TextBlock>
        <TextBlock x:Name="SpannungGenerator" Grid.Column="11" Grid.ColumnSpan="3" Grid.Row="21" FontSize="16pt">U = 0V</TextBlock>

        <Label Content="Netz" Grid.Column="15" Grid.ColumnSpan="4" Grid.Row="18" Grid.RowSpan="2" VerticalAlignment="Center" FontSize="20pt"/>
        <TextBlock x:Name="FrequenzNetz" Grid.Column="15" Grid.ColumnSpan="3" Grid.Row="20" FontSize="16pt">f = 0Hz</TextBlock>
        <TextBlock x:Name="SpannungNetz" Grid.Column="15" Grid.ColumnSpan="3" Grid.Row="21" FontSize="16pt">U = 0V</TextBlock>

    </Grid>
</Window>
///////////////////////////////////////////////////////////////
//
// Motorschaltungen 1 - 4 (Getriebemotor)
//
///////////////////////////////////////////////////////////////

// Eingänge:
var DI_0_0 = "2#0001"       // S1   Taster(⓪) → Öffner
var DI_0_1 = "2#0010"       // S2   Taster(①) → Schliesser
var DI_0_2 = "2#0100"       // S4   Taster(STOP links) → Öffner
var DI_0_3 = "2#1000"       // S3   Taster(Ⅰ) → Schliesser

var DI_0_4 = "2#0001_0000" // S5   Taster(Ⅱ) → Schliesser
var DI_0_5 = "2#0010_0000" // S7   Taster(STOP rechts) → Öffner
var DI_0_6 = "2#0100_0000" // S6   Taster(←) → Schliesser
var DI_0_7 = "2#1000_0000" // S8   Taster(→) → Schliesser

var DI_1_0 = "2#0001_0000_0000" // S9.1 Not-Halt → Schliesser
var DI_1_1 = "2#0010_0000_0000" // S9.2 Not-Halt → Öffner
var DI_1_2 = "2#0100_0000_0000" // B1   Lichtschranke 0°
var DI_1_3 = "2#1000_0000_0000" // B2   Lichtschranke 45° CCW

// Ausgänge:
var DQ_0_0 = "2#0001"       // Q1 Getriebemotor Schnell Rechtslauf
var DQ_0_1 = "2#0010"       // Q2 Getriebemotor Linkslauf
var DQ_0_2 = "2#0100"       // Q3 Getriebemotor Langsam Rechtslauf

var DQ_0_4 = "2#0001_0000" // P1 Meldeleuchte Betriebsbereit(weiß)
var DQ_0_5 = "2#0010_0000" // P2 Meldeleuchte Motorschütz(grün)
var DQ_0_6 = "2#0100_0000" // P3 Meldeleuchte Störung(rot)

main()
{    
    var S1 = Plc2Dec(DI_0_0) // Stop
    var S2 = Plc2Dec(DI_0_1) // Start
    var S4 = Plc2Dec(DI_0_2) // Thermorelais
    var S8 = Plc2Dec(DI_0_7) // Quittieren
    var S92 = Plc2Dec(DI_1_1) // Not-Halt

    var AllesAus = 0
    var P1 = Plc2Dec(DQ_0_4) // weiß
    var P2 = Plc2Dec(DQ_0_5) // grün
    var P3 = Plc2Dec(DQ_0_6) // rot
    var Maske_P1_P2_P3 = P1 + P2 + P3

    SetDataGridBitAnzahl 0, 0
    VersionAnzeigen

    Sleep("T#100ms")
    UpdateAnzeige "Init", ""
    IncrementDataGridId

    UpdateAnzeige "Kommentar", "Normalbetrieb testen"
    IncrementDataGridId
    
    SetDigitaleEingaenge(S1 + S4 + S8 + S92)
    ResetStopwatch
    Sleep("T#100ms")
    BitmusterTesten P1, Maske_P1_P2_P3, "T#5s", "Quittieren -> Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4 + S92)
    ResetStopwatch
    BitmusterTesten P1, Maske_P1_P2_P3, "T#5s", "Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S2 + S4+ S92)
    ResetStopwatch
    BitmusterTesten P2, Maske_P1_P2_P3, "T#5s", "Motor Ein?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4 + S92)
    ResetStopwatch
    BitmusterTesten P2, Maske_P1_P2_P3, "T#5s", "Motor noch Ein?"
    IncrementDataGridId

    SetDigitaleEingaenge(S4 + S92)
    ResetStopwatch
    BitmusterTesten P1, Maske_P1_P2_P3, "T#5s", "Betriebsbereit?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4 + S92)
    ResetStopwatch
    BitmusterTesten P1, Maske_P1_P2_P3, "T#5s", "Immer noch Betriebsbereit?"
    IncrementDataGridId

    UpdateAnzeige "Kommentar", "Störung Thermorelais testen"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S92)
    ResetStopwatch
    BitmusterTesten P3, Maske_P1_P2_P3, "T#5s", "Störung Thermorelais und Motor Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S2 + S92)
    ResetStopwatch
    BitmusterTesten P3, Maske_P1_P2_P3, "T#5s", "Störung Thermorelais und Motor bleibt Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, Maske_P1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz)"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S2 + S4 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, Maske_P1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz) und Motor bleibt aus"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4 + S8 + S92)
    ResetStopwatch
    BitmusterTesten P1, Maske_P1_P2_P3, "T#5s", "Quittieren -> Betriebsbereit?"
    IncrementDataGridId

    UpdateAnzeige "Kommentar", "Störung Not-Halt testen"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4)
    ResetStopwatch
    BitmusterTesten P3, Maske_P1_P2_P3, "T#5s", "Störung Not-Halt und Motor Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S2 + S4)
    ResetStopwatch
    BitmusterTesten P3, Maske_P1_P2_P3, "T#5s", "Störung Not-Halt und Motor bleibt Aus?"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, Maske_P1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz)"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S2 + S4 + S92)
    ResetStopwatch
    BitmusterBlinktTesten P3, Maske_P1_P2_P3, "T#1s500ms", 0.50, 2, 1.1, "T#10s", "Störung (0,8Hz) und Motor bleibt aus"
    IncrementDataGridId

    SetDigitaleEingaenge(S1 + S4 + S8 + S92)
    ResetStopwatch
    BitmusterTesten P1, Maske_P1_P2_P3, "T#5s", "Quittieren -> Betriebsbereit?"
    IncrementDataGridId

    UpdateAnzeige "Erfolgreich", ""
}

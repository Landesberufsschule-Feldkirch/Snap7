<Window x:Class="_AlleManConfigTesten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Alle ManConfig Anzeigen/Testen" Height="850" Width="1200">
    <Grid>
        <TabControl>
            <TabItem Header="Analoge Ausgänge AA">
                <Grid Background="LightCyan">
                    <DataGrid x:Name="DataGridAa" DataContext="{Binding ViAnzeige.AaAlleDaten}" />
                </Grid>
            </TabItem>
            <TabItem Header="Analoge Eingänge AI">
                <Grid Background="LightCyan">
                    <DataGrid x:Name="DataGridAi" DataContext="{Binding ViAnzeige.AiAlleDaten}" />
                </Grid>
            </TabItem>
            <TabItem Header="Digitale Ausgänge DA">
                <Grid Background="LightCyan">
                    <DataGrid x:Name="DataGridDa" DataContext="{Binding ViAnzeige.DaAlleDaten}" />
                </Grid>
            </TabItem>
            <TabItem Header="Digitale Eingänge DI">
                <Grid Background="LightCyan">
                    <DataGrid x:Name="DataGridDi" DataContext="{Binding ViAnzeige.DiAlleDaten}" />
                </Grid>
            </TabItem>
        </TabControl>




    </Grid>
</Window>

                <Point X="0"    Y="500"  />
                <Point X="400"  Y="0" />
                <Point X="800"  Y="500" />
                <Point X="400"  Y="1000" />
            </Polygon.Points>
        </Polygon>

        <!--nach rechts oben -->
        <Line Grid.Column="2" Grid.ColumnSpan="16" Grid.Row="12" Grid.RowSpan="10" X1="105" Y1="0" X2="385"  Y2="-350"  Stroke="Orange"     StrokeThickness="{Binding Nadeltelegraph.Width1UpRight}"  />
        <Line Grid.Column="2" Grid.ColumnSpan="16" Grid.Row="12" Grid.RowSpan="10" X1="245" Y1="0" X2="455"  Y2="-250"  Stroke="OrangeRed"  StrokeThickness="{Binding Nadeltelegraph.Width2UpRight}"  />
        <Line Grid.Column="2" Grid.ColumnSpan="16" Grid.Row="12" Grid.RowSpan="10" X1="385" Y1="0" X2="525"  Y2="-175"  Stroke="Red"        StrokeThickness="{Binding Nadeltelegraph.Width3UpRight}"  />
        <Line Grid.Column="2" Grid.ColumnSpan="16" Grid.Row="12" Grid.RowSpan="10" X1="525" Y1="0" X2="595"  Y2="-100"  Stroke="OrangeRed"  StrokeThickness="{Binding Nadeltelegraph.Width4UpRight}"  />

        <!--nach rechts unten -->

<Window x:Class="WordClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordClock"
        mc:Ignorable="d"
        Title="MainWindow"  Height="1200" Width="1000" Closing="Window_Closing">

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>


        <Label x:Name="lbl_VersionsInfo" Content="V0.0 " Grid.Column="16" Grid.ColumnSpan="2" Grid.Row="0" HorizontalAlignment="Right"/>
        <Label x:Name="lbl_PlcPing"  Content="" Grid.Column="13" Grid.Row="5"  Grid.ColumnSpan="6" />
        <!--
        <Rectangle Fill="LightGray" Grid.Column="13" Grid.ColumnSpan="5" Grid.Row="1"  Grid.RowSpan="4" Stroke="Black"  />
        <Rectangle Fill="LightGray" Grid.Column="2" Grid.ColumnSpan="10" Grid.Row="1"  Grid.RowSpan="17" Stroke="Black"  />
-->

        <Button x:Name="btn_Connect" Content="Connect" Grid.Column="14" Grid.Row="3" Click="ButtonConnect_Click"  />
        <Button x:Name="btn_Disconnect" Content="Disconnect" Grid.Column="16" Grid.Row="3" Click="ButtonDisconnect_Click"  IsEnabled="False"  />

        <Label Name="lblGeschwindigkeit" Content="Geschwindigkeit" Grid.Column="4" Grid.Row="9" Grid.ColumnSpan="2" />
        <Slider x:Name="sldGeschwindigkeit" Grid.Column="4" Grid.ColumnSpan="5"  Grid.Row="10" Maximum="100" Minimum="1" SmallChange="1" Value="10" Background="LightCyan" />

        <Image Source="images/backGround.png" Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="2" Grid.RowSpan="10" />

        <!-- Second  -->
        <Rectangle Margin="174,10,175,174" Name="rectangleSecond" Stroke="Red" Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="2" Grid.RowSpan="10" >
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="secondHand" CenterX="0" CenterY="165" Angle="0" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <!-- -->

        <!-- Minute  -->
        <Rectangle Margin="174,20,175,174" Name="rectangleMinute" Stroke="LightGreen" Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="2" Grid.RowSpan="10" >
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="minuteHand" CenterX="0" CenterY="155" Angle="0" />
            </Rectangle.RenderTransform>
        </Rectangle>
        <!-- -->

        <!-- Hour  -->
        <Rectangle Margin="174,40,175,174" Name="rectangleHour" Stroke="LightYellow"  Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="2" Grid.RowSpan="10" >
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="hourHand" CenterX="0" CenterY="135" Angle="0" />
            </Rectangle.RenderTransform>
        </Rectangle>

    </Grid>
</Window>
